<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>


  <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #595959;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.hivecampuscompany.hivecampus.view.controller.javafx.HomePageJavaFxController">
      <children>
          <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
              <image>
                  <Image url="@images/logoHomepage.png" />
              </image>
              <HBox.margin>
                  <Insets />
              </HBox.margin>
          </ImageView>
          <Region HBox.hgrow="ALWAYS" />
          <MenuButton fx:id="mbtnNotifications" mnemonicParsing="false">
              <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
                  <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
          </MenuButton>
          <MenuButton fx:id="mbtnMenuAccount" mnemonicParsing="false">
              <items>
                  <MenuItem fx:id="mibtnAccountInfo" disable="true" mnemonicParsing="false">
                      <graphic>
                          <HBox alignment="CENTER" spacing="10.0">
                              <children>
                                  <ImageView fx:id="imgAccount" fitHeight="40.0" fitWidth="40.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@images/account.png" />
                                      </image>
                                  </ImageView>
                                  <Label fx:id="lblUsername" />
                              </children>
                          </HBox>
                      </graphic>
                  </MenuItem>
                  <MenuItem fx:id="mibtnSettings" mnemonicParsing="false">
                      <graphic>
                          <HBox>
                              <children>
                                  <Label fx:id="lblSettings" />
                              </children>
                          </HBox>
                      </graphic>
                  </MenuItem>
                  <MenuItem fx:id="mibtmLanguage" mnemonicParsing="false">
                      <graphic>
                          <HBox>
                              <children>
                                  <Label fx:id="lblLanguage" />
                              </children>
                          </HBox>
                      </graphic>
                  </MenuItem>
                  <MenuItem fx:id="mibtnLogout" mnemonicParsing="false">
                      <graphic>
                          <HBox>
                              <children>
                                  <Label fx:id="lblLogout" />
                              </children>
                          </HBox>
                      </graphic>
            </MenuItem>
              </items>
          </MenuButton>
      </children>
      <padding>
          <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
      </padding>
  </HBox>
