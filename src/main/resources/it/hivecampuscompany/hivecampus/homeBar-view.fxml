<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #595959;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.hivecampuscompany.hivecampus.view.controller.javafx.HomePageJavaFxController">
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
    <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets />
        </HBox.margin>
        <Image url="@images/logoHomepage.png" />
    </ImageView>
    <Region HBox.hgrow="ALWAYS" />
    <MenuButton fx:id="mbtnNotifications" mnemonicParsing="false" stylesheets="@menuItemStyle.css">
      <items>
         <MenuItem mnemonicParsing="false">
            <graphic>
               <ListView fx:id="lvNotifications" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: grey; -fx-border-radius: 5;" />
            </graphic>
         </MenuItem>
      </items></MenuButton>
    <MenuButton fx:id="mbtnMenuAccount" mnemonicParsing="false">
        <items>
            <MenuItem disable="true" mnemonicParsing="false">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <ImageView fitHeight="40.0" fitWidth="40.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/account.png" />
                        </ImageView>
                        <Label fx:id="lblUsername" />
                    </HBox>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="mibtnSettings" mnemonicParsing="false">
                <graphic>
                    <HBox>
                        <Label fx:id="lblSettings" />
                    </HBox>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="mibtnLanguage" mnemonicParsing="false">
                <graphic>
                    <HBox>
                        <Label fx:id="lblLanguage" />
                    </HBox>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="mibtnLogout" mnemonicParsing="false">
                <graphic>
                    <HBox>
                        <Label fx:id="lblLogout" />
                    </HBox>
                </graphic>
      </MenuItem>
        </items>
    </MenuButton>
</HBox>
