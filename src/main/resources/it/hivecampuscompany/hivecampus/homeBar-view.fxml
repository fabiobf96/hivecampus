<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #595959;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.hivecampuscompany.hivecampus.state.javafx.controller.HomePageJavaFxController">
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
    <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets />
        </HBox.margin>
        <Image url="@images/logoHomepage.png" />
    </ImageView>
    <Region HBox.hgrow="ALWAYS" />
    <MenuButton fx:id="mbtnNotifications" mnemonicParsing="false"/>
    <MenuButton fx:id="mbtnMenuAccount" mnemonicParsing="false">
        <items>
            <MenuItem disable="true" mnemonicParsing="false">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <ImageView fitHeight="40.0" fitWidth="40.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/account.png" />
                        </ImageView>
                        <Label fx:id="lblUsername" />
                    </HBox>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="mibtnSettings" mnemonicParsing="false">
                <graphic>
                    <HBox>
                        <Label fx:id="lblSettings" />
                    </HBox>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="mibtnLanguage" mnemonicParsing="false">
                <graphic>
                    <HBox>
                        <Label fx:id="lblLanguage" />
                    </HBox>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="mibtnLogout" mnemonicParsing="false">
                <graphic>
                    <HBox>
                        <Label fx:id="lblLogout" />
                    </HBox>
                </graphic>
      </MenuItem>
        </items>
    </MenuButton>
</HBox>
