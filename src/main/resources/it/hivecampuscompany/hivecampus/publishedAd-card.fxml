   <BorderPane>
      <top>
         <HBox spacing="10.0" />
      </top>
      <center>
         <VBox>
            <VBox>
               <Label fx:id="lblTitle" text="Label">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
                  <padding>
