                  </HBox>
                  <HBox spacing="45.0" style="-fx-border-color: grey; -fx-border-radius: 5; -fx-background-color: white;">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <VBox alignment="CENTER_LEFT" spacing="5.0">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                        <Label fx:id="lblRoomType" text="Type:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lblMonthAvl" text="Availability:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lblRPrice" text="Price:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </VBox>
                     <VBox alignment="CENTER_LEFT" spacing="5.0">
                        <Label fx:id="lblType" text="Label">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lblMonth" text="Label">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lblPrice" text="Label">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </VBox>
                  </HBox>
               </VBox>
            </HBox>
         </VBox>
      </center>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <right>
         <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEdit" mnemonicParsing="false" style="-fx-background-radius: 5; -fx-border-radius: 0;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@images/edit.png" />
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
            <Button fx:id="btnRoom" mnemonicParsing="false" style="-fx-background-radius: 5; -fx-border-radius: 0;">
               <graphic>
                  <ImageView fitHeight="34.0" fitWidth="35.0" pickOnBounds="true">
                     <Image url="@images/add_bed.png" />
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="2.0" left="4.0" right="3.0" top="3.0" />
               </padding></Button>
            <Button fx:id="btnDelete" mnemonicParsing="false" style="-fx-background-radius: 5; -fx-border-radius: 0;">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@images/bin.png" />
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="5.0" left="4.0" right="4.0" top="5.0" />
               </padding></Button>
         </HBox>
