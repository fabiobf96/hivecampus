<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.hivecampuscompany.hivecampus.state.javafx.controller.ManageRequestsJavaFxPageController">
   <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
      <VBox alignment="CENTER">
         <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/account.png"/>
         </ImageView>
         <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <Text fx:id="txtName" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
            <Text fx:id="txtSurname" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
         </HBox>
      </VBox>
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <Text fx:id="txtStart" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
         <Text fx:id="txtDuration" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
         <Text fx:id="txtEmail" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
         <Text fx:id="txtPhoneNumber" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
      </VBox>
   </HBox>
   <Text fx:id="txtMessage" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
      <VBox.margin>
         <Insets left="5.0"/>
      </VBox.margin>
   </Text>
   <Pane style="-fx-border-color: black; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
      <opaqueInsets>
         <Insets/>
      </opaqueInsets>
      <VBox.margin>
         <Insets/>
      </VBox.margin>
      <padding>
         <Insets left="10.0"/>
      </padding>
      <Label fx:id="lblMsgContent" text="Label">
         <padding>
            <Insets bottom="10.0" left="10.0" top="10.0"/>
         </padding>
      </Label>
   </Pane>
</VBox>
